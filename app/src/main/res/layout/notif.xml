<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/big_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingStart="4dp"
            android:paddingEnd="6dp"
            android:src="@mipmap/ic_launcher_round"/>

        <ImageView
            android:id="@+id/small_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@id/big_icon"
            android:layout_alignEnd="@id/big_icon"
            android:src="@mipmap/ic_launcher_round"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/notification_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/icon_container"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="6dp"
        android:paddingEnd="6dp">

        <TextView
            android:id="@+id/content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay Safe"
            android:textAppearance="@android:style/TextAppearance.Material.Notification.Title" />

        <TextView
            android:id="@+id/content_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Risk"
            android:textAppearance="@android:style/TextAppearance.Material.Notification.Info" />

    </LinearLayout>

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:paddingStart="3.5dp"
        android:paddingEnd="3.5dp"
        android:paddingTop="8dp" />


</RelativeLayout>
